@model Do_an_CCNPMM.ViewModels.HomeVM

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";

}
<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>Thông tin người dùng</h1>
                <nav class="d-flex align-items-center">
                    <a class="nav-link" asp-area="User" asp-controller="Home" asp-action="Index">Trang chủ<span class="lnr lnr-arrow-right"></span></a>
                    <a>Thông tin của bạn</a>
                </nav>
            </div>
        </div>
    </div>
</section>
<!-- End Banner Area -->
@{

    if (@ViewBag.mess != null)
    {
        <div class="col">
            <div class="alert alert-danger col-lg-2" role="alert">
                @ViewBag.mess
            </div>
        </div>
    }
}
<section class="blog_area single-post-area section_gap">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="blog_right_sidebar">
                    <aside class="single_sidebar_widget author_widget">
                        <img class="author_img rounded-circle" onerror="this.src='../../../images/duphong.webp'" src="@if (ViewBag.khachhang.AnhDaiDien!=null){@ViewBag.khachhang.AnhDaiDien;}" alt="">
                        <h4>@ViewBag.khachhang.TenNguoiDung</h4>
                        <div class="br"></div>
                    </aside>
                    <aside class="single_sidebar_widget popular_post_widget">
                        <h3 class="widget_title">Tài khoản</h3>
                        <div class="media post_item">
                            <div class="media-body">
                                <a class="noidungInfo" asp-action="ChiTietNG">
                                    <h3>Thông tin tài khoản</h3>
                                </a>
                            </div>
                        </div>
                        <div class="media post_item">
                            <div class="media-body">
                                <a class="noidungInfo_active" asp-action="DonHang">
                                    <h3>Đơn hàng của bạn</h3>
                                </a>
                            </div>
                        </div>
                        <div class="media post_item">
                            <div class="media-body">
                                <a href="@Url.Action("EditMK", new { id =@ViewBag.khachhang.MaNguoiDung })">
                                    <h3>Đổi mật khẩu</h3>
                                </a>
                            </div>
                        </div>
                        @*<div class="media post_item">
                            <div class="media-body">
                                <a asp-action="SoDiaChi">
                                    <h3>Số địa chỉ(@ViewBag.khachhang.NguoiDungDiaChis.Count)</h3>
                                </a>
                            </div>
                        </div>*@
                        <div class="media post_item">
                            <div class="media-body">
                                <a asp-controller="UserLogin" asp-action="Logout">
                                    <h3>Đăng xuất</h3>
                                </a>
                            </div>
                        </div>
                        <div class="br"></div>
                    </aside>
                    <aside class="single_sidebar_widget ads_widget">
                        <a href="#"><img class="img-fluid" src="img/blog/add.jpg" alt=""></a>
                    </aside>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="blog_right_sidebar">
                    <div class="container">
                        <h1>Xóa Đơn Hàng</h1>
                        <h3>Bạn có muốn xóa đơn hàng này không?</h3>
                        <h4> Đơn hàng</h4>
                        <hr />
                        <div class="row justify-content-sm-center">
                            <div class="col-sm-8">
                                <div class="row m-10 ">
                                    <div class="col-sm-6 border border-dark ">
                                        Mã Đơn Hàng
                                    </div>
                                    <div class="col-sm-6 border border-dark ">
                                        @ViewBag.xoa.MaDonHang
                                    </div>

                                </div>

                                <div class="row m-10">
                                    <div class="col-sm-6 border border-dark ">
                                        Mã Người dùng
                                    </div>

                                    <div class="col-sm-6 border border-dark ">
                                        @ViewBag.xoa.MaNguoiDung
                                    </div>

                                </div>
                                <div class="row m-10">
                                    <div class="col-sm-6 border border-dark ">
                                        Địa chỉ
                                    </div>

                                    <div class="col-sm-6 border border-dark ">
                                        @ViewBag.xoa.DiaChi
                                    </div>

                                </div>
                                <div class="row m-10">
                                    <div class="col-sm-6 border border-dark ">
                                        Tình Trạng
                                    </div>

                                    <div class="col-sm-6 border border-dark ">
                                        @ViewBag.xoa.TinhTrang
                                    </div>

                                </div>
                                <div class="row m-10">
                                    <div class="col-sm-6 border border-dark ">
                                        Tổng Tiền
                                    </div>

                                    <div class="col-sm-6 border border-dark ">
                                        @string.Format("{0:0,0}", @ViewBag.xoa.TongTien)<sup>VND</sup>
                                    </div>

                                </div>
                            </div>
                        </div>

                        <form asp-action="Delete">
                            <input type="submit" value="Xóa" class="btn btn-danger" />

                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>