@model Do_an_CCNPMM.Models.NguoiDung
@{
    ViewData["Title"] = "DonHang";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}
<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>Thông tin người dùng</h1>
                <nav class="d-flex align-items-center">
                    <a class="nav-link" asp-area="User" asp-controller="Home" asp-action="Index">Trang chủ<span class="lnr lnr-arrow-right"></span></a>
                    <a>Thông tin của bạn</a>
                </nav>
            </div>
        </div>
    </div>
</section>
<!-- End Banner Area -->
@{

    if (@ViewBag.sus != null)
    {
        <div class="col">
            <div class="alert alert-success col-lg-2" role="alert">
                @ViewBag.sus
            </div>
        </div>
    }
}

<section class="blog_area single-post-area section_gap">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="blog_right_sidebar">
                    <aside class="single_sidebar_widget author_widget">
                        <img class="author_img rounded-circle" onerror="this.src='../../../images/duphong.webp'" src="@if (ViewBag.khachhang.AnhDaiDien!=null){
                        @ViewBag.khachhang.AnhDaiDien
;}" alt="">
                        <h4>@ViewBag.khachhang.TenNguoiDung</h4>
                        <div class="br"></div>
                    </aside>
                    <aside class="single_sidebar_widget popular_post_widget">
                        <h3 class="widget_title">Tài khoản</h3>
                        <div class="media post_item">
                            <div class="media-body">
                                <a class="noidungInfo" asp-action="ChiTietNG">
                                    <h3>Thông tin tài khoản</h3>
                                </a>
                            </div>
                        </div>
                        <div class="media post_item">
                            <div class="media-body">
                                <a class="noidungInfo_active" asp-action="DonHang">
                                    <h3>Đơn hàng của bạn</h3>
                                </a>
                            </div>
                        </div>
                        <div class="media post_item">
                            <div class="media-body">
                                <a href="@Url.Action("EditMK", new { id =@ViewBag.khachhang.MaNguoiDung })">
                                    <h3>Đổi mật khẩu</h3>
                                </a>
                            </div>
                        </div>
                        @*<div class="media post_item">
                            <div class="media-body">
                                <a asp-action="SoDiaChi">
                                    <h3>Số địa chỉ(@ViewBag.khachhang.NguoiDungDiaChis.Count)</h3>
                                </a>
                            </div>
                        </div>*@
                        <div class="media post_item">
                            <div class="media-body">
                                <a asp-controller="UserLogin" asp-action="Logout">
                                    <h3>Đăng xuất</h3>
                                </a>
                            </div>
                        </div>
                        <div class="br"></div>
                    </aside>
                    <aside class="single_sidebar_widget ads_widget">
                        <a href="#"><img class="img-fluid" src="img/blog/add.jpg" alt=""></a>
                    </aside>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="blog_right_sidebar">
                    <h2 class="title_Chinh" style="margin-bottom: 25px">Đơn hàng của bạn</h2>
                    <div class="table-responsive">
                        <table class="table table-hover e-commerce-table">
                            <thead>
                                <tr>
                                    <th>Đơn hàng</th>
                                    <th>Tên Mặt Hàng</th>
                                    <th>Giá</th>
                                    <th>Số Lượng</th>

                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    if (ViewBag.chitietdonhang != null)
                                    { @foreach (var item in ViewBag.chitietdonhang)
                                        {
                                            <tr>
                                                <td>@item.CT_DH.MaDonHang</td>
                                                <td>@item.SanPham.TenMatHang</td>
                                                <td>@string.Format("{0:0,0}", @item.CT_DH.Gia)<sup>VND</sup></td>
                                                <td>@item.CT_DH.SoLuong</td>

                                            </tr>
                                        }
                                    }
                                }
                        </table>
                        <form asp-action="ChiTietDH">
                            @{
                                if (ViewBag.tinhtrang == "Chưa xác nhận")

                                {

                                    <div class="form-group">
                                        <input type="submit" value="Xác Nhận" class="genric-btn primary radius" />
                                    </div>
                                }
                                else if (ViewBag.tinhtrang == "Đã giao")

                                {

                                    <div class="form-group">
                                        <input type="submit" value="Xác Nhận đã nhận" class="genric-btn primary radius" />
                                    </div>
                                }
                                else
                                {
                                    <div class="form-group">
                                        <input type="button" value="Đã xác nhận" class="genric-btn primary radius" disabled />
                                    </div>
                                }
                            }

                        </form>
                    </div>
                    <div class="form-group">
                        <a asp-area="User" asp-controller="UserDetail" asp-action="DonHang" class="genric-btn primary radius">Quay Lại</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>