@model Do_an_CCNPMM.Models.NguoiDung
@{
    ViewData["Title"] = "MKMoi";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}

<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>Thông tin người dùng</h1>
                <nav class="d-flex align-items-center">
                    <a class="nav-link" asp-area="User" asp-controller="Home" asp-action="Index">Trang chủ<span class="lnr lnr-arrow-right"></span></a>
                    <a>Thông tin của bạn</a>
                </nav>
            </div>
        </div>
    </div>
</section>
<!-- End Banner Area -->
<section class="blog_area single-post-area section_gap">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="blog_right_sidebar">
                    <aside class="single_sidebar_widget author_widget">
                        <img class="author_img rounded-circle" onerror="this.src='../../images/duphong.webp'" src="@if (ViewBag.khachhang.AnhDaiDien!=null){
                        @ViewBag.khachhang.AnhDaiDien
;}" alt="">
                        <h4>@ViewBag.khachhang.TenNguoiDung</h4>
                        <div class="br"></div>
                    </aside>
                    <aside class="single_sidebar_widget popular_post_widget">
                        <h3 class="widget_title">Popular Posts</h3>
                        <div class="media post_item">
                            <div class="media-body">
                                <a class="noidungInfo" asp-action="ChiTietNG">
                                    <h3>Thông tin tài khoản</h3>
                                </a>
                            </div>
                        </div>
                        <div class="media post_item">
                            <div class="media-body">
                                <a class="noidungInfo_active" asp-action="DonHang">
                                    <h3>Đơn hàng của bạn</h3>
                                </a>
                            </div>
                        </div>
                        <div class="media post_item">
                            <div class="media-body">
                                <a href="@Url.Action("EditMK", new { id =@ViewBag.khachhang.MaNguoiDung })">
                                    <h3>Đổi mật khẩu</h3>
                                </a>
                            </div>
                        </div>
                        @*<div class="media post_item">
                            <div class="media-body">
                                <a asp-action="SoDiaChi">
                                    <h3>Số địa chỉ(@ViewBag.khachhang.NguoiDungDiaChis.Count)</h3>
                                </a>
                            </div>
                        </div>*@
                        <div class="media post_item">
                            <div class="media-body">
                                <a asp-controller="UserLogin" asp-action="Logout">
                                    <h3>Đăng xuất</h3>
                                </a>
                            </div>
                        </div>
                        <div class="br"></div>
                    </aside>
                    <aside class="single_sidebar_widget ads_widget">
                        <a href="#"><img class="img-fluid" src="img/blog/add.jpg" alt=""></a>
                    </aside>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="blog_right_sidebar">
                    <form asp-action="MKMoi">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="MaNguoiDung" />
                        <h2 class="title_Chinh">Đổi mật khẩu</h2>
                        <div class="KhungDoiMK">
                            <div class="form-group col-lg-6">
                                <label class="control-label">Mật khẩu mới</label>
                                <input type="password" id="password1" class="form-control" onkeyup="check();" />
                                <span class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-6">
                                <label asp-for="MatKhauHash" class="control-label">Nhập lại mật khẩu mới</label>
                                <input type="password" id="password2" asp-for="MatKhauHash" class="form-control" onchange="validateForm()" onkeyup="check();" />
                                <span asp-validation-for="MatKhauHash" class="text-danger"></span>
                            </div>
                            <span id="message"></span>
                            <div class="form-group">
                                <button type="submit" class="genric-btn disable" id="submit1" disabled >Đổi mật khẩu </button>
                            </div>
                        </div>


                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    var check = function () {
        if (document.getElementById('password1').value ==
            document.getElementById('password2').value && document.getElementById('password1').value !== "") {
            document.getElementById('password1').style.border = '1px solid #50C878';
            document.getElementById('password2').style.border = '1px solid #50C878';
            document.getElementById('submit1').disabled = false;
            document.getElementById('submit1').className = "genric-btn primary radius";
        } else {
            document.getElementById('password1').style.border = '1px solid #ff0000';
            document.getElementById('password2').style.border = '1px solid #ff0000';
            document.getElementById('submit1').disabled = true;
            document.getElementById('submit1').className = "genric-btn disable";
        }
    }
</script>