@*<section class="owl-carousel active-product-area section_gap">*@
	<!-- single product slide -->
	<div class="single-product-slider">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-lg-6 text-center">
					<div class="section-title">
						<h1>Sản phẩm mới nhất</h1>
						<p>Tất cả các sản phẩm giày dép mới nhất trên thị trường.</p>
					</div>
				</div>
			</div>
			<div class="row">
				<!-- single product -->
				@{int i = 0;
				}
				@if (ViewBag.mathang != null)
				{
					@foreach (var item in ViewBag.mathang)
					{
						@if (i <8)
						{
							<div class="col-lg-3 col-md-6">
								<div class="single-product">
									<img onerror="this.src='images/duphong.webp'" src="@if (item.MatHangAnhs.Count > 0) {@item.MatHangAnhs[0].Anh}" width="250px" alt="">
								<div class="product-details">
										<h6>
											<a asp-area="User" asp-controller="ProductDetail" asp-action="Index" asp-route-id="@item.listSPs.MaMatHang" class="social-info">@item.listSPs.TenMatHang</a> 
										</h6>
										<div class="price">
											<h6>@string.Format("{0:0,0}", item.listSPs.GiaBan) <sup>VND</sup></h6>
										</div>
										<div class="prd-bottom">
											<a href="@Url.Action("AddCart","Home", new { Area="User" , id = @item.listSPs.MaMatHang})" class="social-info noreturnlink" method="post">
												<span class="ti-bag"></span>
												<p class="hover-text">Thêm vô giỏ</p>
											</a>                      
											<a asp-area="User" asp-controller="ProductDetail" asp-action="Index" asp-route-id="@item.listSPs.MaMatHang" class="social-info">
												<span class="lnr lnr-move"></span>
												<p class="hover-text">Chi tiết</p>
											</a>
										</div>
									</div>
								</div>
							</div>


							i++;
						}
					}

				}
			
			</div>
		</div>
	</div>
	<!-- single product slide -->
@*</section>*@
