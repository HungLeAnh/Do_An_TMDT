@model Do_an_TMDT.ViewModels.HomeVM;
@{
	ViewData["Title"] = "Product Detail Page";
	Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}

<!-- Start Banner Area -->
	<section class="banner-area organic-breadcrumb">
		<div class="container">
			<div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
				<div class="col-first">
					<h1>Product Details Page</h1>
					<nav class="d-flex align-items-center">
						<a asp-area="User" asp-controller="Home" asp-action="Index" >Home<span class="lnr lnr-arrow-right"></span></a>
						<a href="#">Shop<span class="lnr lnr-arrow-right"></span></a>
						<a>@Model.MatHangs[0].listSPs.TenMatHang</a>
					</nav>
				</div>
			</div>
		</div>
	</section>
	<!-- End Banner Area -->

	<!--================Single Product Area =================-->
	<div class="product_image_area">
		<div class="container">
			<div class="row s_product_inner">
				<div class="col-lg-6">
					<div class="s_Product_carousel">
					@{
						if (Model.MatHangs[0].MatHangAnhs.Count > 0)
						{
							foreach (var item in Model.MatHangs[0].MatHangAnhs)
							{
										<div class="single-prd-item">
											<img class="img-fluid" onerror="this.src='~/images/duphong.webp'" src="~/@item.Anh" alt="">
										</div>
							}
						}
						else
						{
									<div class="single-prd-item">
										<img class="img-fluid" onerror="this.src='~/images/duphong.webp'" src="~/images/duphong.webp" alt="">
									</div>
						}
					}
					</div>
				</div>
				<div class="col-lg-5 offset-lg-1">
					<div class="s_product_text">
						<h3>@Model.MatHangs[0].listSPs.TenMatHang</h3>
						<h2>@string.Format("{0:0,0}", Model.MatHangs[0].listSPs.GiaBan) VND</h2>
						<ul class="list">
						<li><a class="active" href="#"><span>Brand</span> : @Model.MatHangs[0].thuonghieu[0].TenThuongHieu</a></li>
							<li><a href="#"><span>Availibility</span> : In Stock</a></li>
						</ul>
						@Html.Raw(@Model.MatHangs[0].listSPs.MoTa)
						<div class="product_count">
							<label for="qty">Quantity:</label>
							<input type="text" name="qty" id="sst" maxlength="12" value="1" title="Quantity:" class="input-text qty">
							<button onclick="var result = document.getElementById('sst'); var sst = result.value; if( !isNaN( sst )) result.value++;return false;"
							 class="increase items-count" type="button"><i class="lnr lnr-chevron-up"></i></button>
							<button onclick="var result = document.getElementById('sst'); var sst = result.value; if( !isNaN( sst ) &amp;&amp; sst > 0 ) result.value--;return false;"
							 class="reduced items-count" type="button"><i class="lnr lnr-chevron-down"></i></button>
						</div>
						<div class="card_area d-flex align-items-center">
							@if (Model.MatHangs[0].listSPs.SoLuong <= 0)
							{
								<a class="primary-btn" href="#">SOLD OUT</a>
							}
							else{
							<a class="primary-btn" href="@Url.Action("AddCart","Cart", new { Area="User" , id = @Model.MatHangs[0].listSPs.MaMatHang})">Add to Cart</a>

							}
							<a class="icon_btn" href="#"><i class="lnr lnr lnr-heart"></i></a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!--================End Single Product Area =================-->

