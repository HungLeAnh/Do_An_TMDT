@model Do_an_CCNPMM.Models.NguoiDung
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
	<div class="container">
		<div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
			<div class="col-first">
				<h1>Login/Register</h1>
				<nav class="d-flex align-items-center">
					<a class="nav-link" asp-area="" asp-controller="Home" asp-action="Loadsanpham">Home<span class="lnr lnr-arrow-right"></span></a>
					<a >Login/Register</a>
				</nav>
			</div>
		</div>
	</div>
</section>
<!-- End Banner Area -->
@{

	if (@ViewBag.mess != null)
	{
		<div class="col">
			<div class="alert alert-danger col-lg-2 justify-content-center" role="alert">
				@ViewBag.mess
			</div>
		</div>
	}
}
<!--================Login Box Area =================-->
<section class="login_box_area section_gap">
	<div class="container">
		<div class="row">
			<div class="col-lg-6">
				<div class="login_box_img">
					<img class="img-fluid" src="../Userassets/img/login.jpg" alt="">
					<div class="hover">
						<h4>New to our website?</h4>
						<p>There are advances being made in science and technology everyday, and a good example of this is the</p>
						<a class="primary-btn" asp-area="User" asp-controller="UserLogin" asp-action="Register">Create an Account</a>
					</div>
				</div>
			</div>
			<div class="col-lg-6">
				<div class="login_form_inner">
					<h3>Log in to enter</h3>

					<form accept-charset="utf-8" class="row login_form" asp-area="User" asp-controller="UserLogin" asp-action="Login" id="customer_register" method="post" id="contactForm" novalidate="novalidate">
						<input name="FormType" type="hidden" value="customer_register">
						<input name="utf8" type="hidden" value="true">
						<input type="hidden" id="" name="Token" value="">
						<div class="col-md-12 form-group">
							<input required="" asp-for="Email" type="text" class="form-control" id="name" placeholder="Username" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Username'">
							<span asp-validation-for="Email" class="text-danger"></span>

						</div>
						<div class="col-md-12 form-group">
							<input type="password" asp-for="MatKhauHash" required="" class="form-control" id="name" placeholder="Password" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Password'">
							<span asp-validation-for="MatKhauHash" class="text-danger"></span>

						</div>
						<div class="col-md-12 form-group">
							<button type="submit" value="submit" class="primary-btn">Log In</button>
							<a asp-area="User" asp-controller="UserLogin" asp-action="QuenMK">Forgot Password?</a>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</section>
