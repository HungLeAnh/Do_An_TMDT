<!-- start product Area -->
@*<section class="owl-carousel active-product-area section_gap">*@
	<!-- single product slide -->
	<div class="single-product-slider">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-lg-6 text-center">
					<div class="section-title">
						<h1>Sản phẩm mới nhất</h1>
						<p>Tất cả các sản phẩm giày dép mới nhất trên thị trường.</p>
					</div>
				</div>
			</div>
			<div class="row">
				<!-- single product -->
				@{int i = 0;
				}
				@if (Model.MatHangs != null)
				{
					@foreach (var item in Model.MatHangs)
					{
						@if (i <8)
						{
							<div class="col-lg-3 col-md-6">
								<div class="single-product">
									<img onerror="this.src='images/duphong.webp'" src="@if (item.MatHangAnhs.Count() > 0) {@item.MatHangAnhs[0].Anh}" width="250px" alt="">
								<div class="product-details">
										<h6>@item.listSPs.TenMatHang</h6>
										<div class="price">
											<h6>@string.Format("{0:0,0}", item.listSPs.GiaBan) VND</h6>
										</div>
										<div class="prd-bottom">
											<a asp-area="User" asp-controller="UserLogin" asp-action="Login" class="social-info">
												<span class="ti-bag"></span>
												<p class="hover-text">Thêm</p>
											</a>
											<a href="" class="social-info" id="id1" onclick="dolen(this)">
												<span class="lnr lnr-heart"></span>
												<p class="hover-text">Ưa thích</p>
											</a>
											<a href="@Url.Action("ChiTiet", "ChiTiet", new { MaSp = item.listSPs.MaMatHang })" class="social-info">
												<span class="lnr lnr-move"></span>
												<p class="hover-text">Chi tiết</p>
											</a>
										</div>
									</div>
								</div>
							</div>


							i++;
						}
					}

				}
			
			</div>
		</div>
	</div>
	<!-- single product slide -->
	
@*</section>*@
<!-- end product Area -->

