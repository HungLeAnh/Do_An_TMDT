@model Do_an_TMDT.ViewModels.HomeVM
@{
	ViewData["Title"] = "Home Page";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

	<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
	<div class="container">
		<div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
			<div class="col-first">
				<h1>Shop Category page</h1>
				<nav class="d-flex align-items-center">
					<a class="nav-link" asp-controller="Home" asp-action="Loadsanpham">Home<span class="lnr lnr-arrow-right"></span></a>
					<a href="">Shop<span class="lnr lnr-arrow-right"></span></a>
					<a>Fashon Category</a>
				</nav>
			</div>
		</div>
	</div>
</section>
	<!-- End Banner Area -->

<div class="container section_gap">
		<div class="row">
			<div class="col-xl-3 col-lg-4 col-md-5">
				<div class="sidebar-categories">
					<div class="head">Browse Categories</div>
					<ul class="main-categories">
					@{
						if (ViewBag.danhmuc != null)
						{
							@foreach (var item in ViewBag.danhmuc)
							{
								<li class="main-nav-list">
									<a data-toggle="collapse" asp-area="" asp-controller="Home" asp-action="ThuongHieu" asp-route-id=item.MaDanhMuc aria-expanded="false" aria-controls="fruitsVegetable">
										<span class="lnr lnr-arrow-right"></span>@item.TenDanhMuc
									</a>
								</li>
							}
						}
					}
					</ul>
				</div>
				
				<div class="sidebar-filter mt-50">
					<div class="top-filter-head">Product Filters</div>
					<div class="common-filter">
						<div class="head">Brands</div>
						<form action="#">
							<ul>
								@if (ViewBag.listcate != null)
								{
									@foreach (var item in ViewBag.listcate)
									{
									<li class="filter-list"><input class="pixel-radio" type="radio" id="@item.MaThuongHieu" name="brand"><label for="apple">@item.TenThuongHieu</label></li>
									}
								}
							</ul>
						</form>
					</div>
					<div class="common-filter">
						<div class="head">Color</div>
						<form action="#">
							<ul>
								@if (ViewBag.mausac != null)
								{
									@foreach (var item in ViewBag.mausac)
									{
										<li class="filter-list"><input class="pixel-radio" type="radio" id="@item.MaMauSac" name="color"><label for="black">@item.TenMauSac</label></li>
									}
								}
							</ul>
						</form>
					</div>					
				</div>
			</div>
		<div class="col-xl-9 col-lg-8 col-md-7 ">
			<!-- Start Filter Bar -->
			<div class="filter-bar d-flex flex-wrap align-items-center">
				<div class="sorting">
					<select>
						<option value="1">Default sorting</option>
						<option value="1">Default sorting</option>
						<option value="1">Default sorting</option>
					</select>
				</div>
				<div class="sorting mr-auto">
					<select>
						<option value="1">Show 12</option>
						<option value="1">Show 12</option>
						<option value="1">Show 12</option>
					</select>
				</div>
				<div class="pagination">
					<a href="#" class="prev-arrow"><i class="fa fa-long-arrow-left" aria-hidden="true"></i></a>
					<a href="#" class="active">1</a>
					<a href="#">2</a>
					<a href="#">3</a>
					<a href="#" class="dot-dot"><i class="fa fa-ellipsis-h" aria-hidden="true"></i></a>
					<a href="#">6</a>
					<a href="#" class="next-arrow"><i class="fa fa-long-arrow-right" aria-hidden="true"></i></a>
				</div>
			</div>
			<!-- End Filter Bar -->
			<!-- Start Best Seller -->
			<section class="lattest-product-area pb-40 category-list">
				<div class="row">
					<!-- single product -->
					@{
						int i = 0;
					}
					@if (Model.MatHangs != null)
					{
						@foreach (var item in Model.MatHangs)
						{
							@if (i < 8)
							{
								<div class="col-lg-4 col-md-6">
									<div class="single-product">
										<img onerror="this.src='../images/duphong.webp'" src="../@if (item.MatHangAnhs.Count() > 0) {@item.MatHangAnhs[0].Anh}" width="250px" alt="">
										<div class="product-details">
											<h6>@item.listSPs.TenMatHang</h6>
											<div class="price">
												<h6>@string.Format("{0:0,0}", item.listSPs.GiaBan) VND</h6>
											</div>
											<div class="prd-bottom">
												<a asp-area="User" asp-controller="UserLogin" asp-action="Login" class="social-info">
													<span class="ti-bag"></span>
													<p class="hover-text">add to bag</p>
												</a>
												<a href="" class="social-info" id="id1" onclick="dolen(this)">
													<span class="lnr lnr-heart"></span>
													<p class="hover-text">Wishlist</p>
												</a>
												<a href="@Url.Action("ChiTiet", "ChiTiet", new { MaSp = item.listSPs.MaMatHang })" class="social-info">
													<span class="lnr lnr-move"></span>
													<p class="hover-text">view more</p>
												</a>
											</div>
										</div>
									</div>
								</div>


								i++;
							}
						}

					}
				</div>
			</section>
			<!-- End Best Seller -->
		</div>

		</div>
	</div>

@await Component.InvokeAsync("Notyf")
