@model Do_an_TMDT.Models.NguoiDung

@{

	Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
	<div class="container">
		<div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
			<div class="col-first">
				<h1>Login/Register</h1>
				<nav class="d-flex align-items-center">
				<a class="nav-link" asp-controller="Home" asp-action="Loadsanpham">Home<span class="lnr lnr-arrow-right"></span></a>
					<a >Login/Register</a>
				</nav>
			</div>
		</div>
	</div>
</section>
<!-- End Banner Area -->
@{

	if (@ViewBag.mess != null)
	{
		<div class="col align-items-center">
			<div class="alert alert-danger col-lg-2 " role="alert">
				@ViewBag.mess
			</div>
		</div>
	}
}
<!--================Register Box Area =================-->
<section class="login_box_area section_gap">
	<div class="container center">
		<div class="col-lg-6">
			<div class="login_form_inner">
				<h3>Register to enter</h3>

				<form accept-charset="utf-8" class="row login_form" asp-controller="NguoiDungs" asp-action="dangky" id="customer_register" method="post" id="contactForm" novalidate="novalidate">
					<input name="FormType" type="hidden" value="customer_register">
					<input name="utf8" type="hidden" value="true">
					<input type="hidden" id="" name="Token" value="">

					<div class="col-md-12 form-group">
							<input placeholder="Nhập Họ Và Tên" required="" asp-for="TenNguoiDung" class="form-control" />
							<span asp-validation-for="TenNguoiDung" class="text-danger"></span>
					</div>

					<div class="col-md-12 form-group">
							<input placeholder="Nhập Tên Đăng Nhập" required="" asp-for="TenDangNhap" class="form-control" />
							<span asp-validation-for="TenDangNhap" class="text-danger"></span>
					</div>

					<div class="col-md-12 form-group">
							<input asp-for="Sdt" required="" placeholder="Nhập Số Điện Thoại" class="form-control" />
							<span asp-validation-for="Sdt" class="text-danger"></span>
					</div>

					<div class="col-md-12 form-group">
						<input asp-for="Email" placeholder="Email*" type="email" class="form-control" data-validation="email"
								data-validation-error-msg="Email sai định dạng" value="" name="email" id="email" required="">
					</div>

					<div class="form-group">
						<input type="hidden" asp-for="Salt" value="1" class="form-control" />
					</div>

					<div class="col-md-12 form-group">
						<input type="password" asp-for="MatKhauHash" required="" class="form-control" id="name" placeholder="Password" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Password'">
						<span asp-validation-for="MatKhauHash" class="text-danger"></span>

					</div>
					<div class="col-md-12 form-group">
						<input type="password" asp-for="MatKhauHash" required="" class="form-control" id="name" placeholder="Password" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Password' ">
						<span asp-validation-for="MatKhauHash" class="text-danger"></span>
					</div>
					<div class="col-md-12 form-group">
						<button type="submit" value="submit" class="primary-btn">Register</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</section>



	<div class="row justify-content-lg-center">
		<div class="col-lg-7 col-md-12">
			<div class="page-login account-box-shadow">
				<div id="login" class="row">
					<div class="col-lg-12 col-md-12 account-content order-lg-last order-md-last order-sm-first order-first">
						<ul class="auth-block__menu-list p-0">
							<li>
								<a asp-controller="NguoiDungs" asp-action="dangnhap" title="Đăng nhập">Đăng nhập</a>
							</li>
							<li class="active">
								<a href="#" title="Đăng ký">Đăng ký</a>
							</li>
						</ul>
						<div id="nd-login">
							<form accept-charset="utf-8" asp-action="dangky" id="customer_register"
								  method="post">
								<input name="FormType" type="hidden" value="customer_register">
								<input name="utf8" type="hidden" value="true"><input type="hidden"
																					 id="" name="Token"
																					 value="">
								<div class="form-signup">
								</div>
								<div class="form-signup clearfix">
									<div class="row">
									   
										<div class="col-md-12">
											<div class="form-group">
												<label asp-for="TenNguoiDung" class="control-label">Họ Và Tên</label>
												<input placeholder="Nhập Họ Và Tên" required="" asp-for="TenNguoiDung" class="form-control" />
												<span asp-validation-for="TenNguoiDung" class="text-danger"></span>
											</div>
										</div>
										<div class="col-md-12">
											<div class="form-group">
												<label asp-for="TenDangNhap" class="control-label"> Nhập Tên Đăng nhập</label>
												<input placeholder="Nhập Tên Đăng Nhập" required="" asp-for="TenDangNhap" class="form-control" />
												<span asp-validation-for="TenDangNhap" class="text-danger"></span>
											</div>
										</div>
										<div class="col-md-12">
											<div class="form-group">
												<label asp-for="Sdt" class="control-label"></label>
												<input asp-for="Sdt" required="" placeholder="Nhập Số Điện Thoại" class="form-control" />
												<span asp-validation-for="Sdt" class="text-danger"></span>
											</div>
										</div>
										<div class="col-md-12">
											<fieldset class="form-group">
												<label asp-for="Email">Email<span class="required">*</span></label>
												<input asp-for="Email" placeholder="Nhập Địa chỉ Email" type="email"
													   class="form-control form-control-lg" data-validation="email"
													   data-validation-error-msg="Email sai định dạng" value=""
													   name="email" id="email" required="">
											</fieldset>
										</div>
										<div class="form-group">

											<input type="hidden" asp-for="Salt" value="1" class="form-control" />

										</div>

										<div class="form-group">
											<label asp-for="MatKhauHash" class="control-label">Nhập mật Khẩu</label>
											<input type="password" asp-for="MatKhauHash" required="" class="form-control" />
											<span asp-validation-for="MatKhauHash" class="text-danger"></span>
										</div>
										

										<div class="col-md-12 text-center margin-top-10">
											<button type="submit" value="Đăng ký" class="btn-style btn-blues">
												Tạo
												tài khoản
											</button>
										</div>
									</div>
								</div>
							</form>
						</div>
						<div id="recover-password" class="form-signup" style="display:none;">
							<div class="fix-sblock text-center">
								Bạn quên mật khẩu? Nhập địa chỉ email để lấy lại mật khẩu qua email.
							</div>
							<form accept-charset="utf-8" action="/account/recover" id="recover_customer_password"
								  method="post">
								<input name="FormType" type="hidden" value="recover_customer_password">
								<input name="utf8" type="hidden" value="true">
								<div class="form-signup ">

								</div>

								<div class="form-signup clearfix">
									<fieldset class="form-group">
										<label>Email<span class="required">*</span></label>
										<input type="email" class="form-control form-control-lg" value="" name="Email"
											   id="recover-email" placeholder="Nhập địa chỉ Email" data-validation="email"
											   data-validation-error-msg="Email sai định dạng" required="">
									</fieldset>
								</div>
								<div class="action_bottom text-center">
									<button class="btn-style btn-blues" style="margin-top: 10px;" type="submit"
											value="Lấy lại mật khẩu">
										Lấy lại mật khẩu
									</button>
								</div>
								<div class="text-login text-center">
									<p>
										Quay lại <a href="javascript:;" class="btn-link-style btn-register"
													onclick="hideRecoverPasswordForm();" title="Quay lại">tại đây.</a>
									</p>
								</div>
								<input name="returnUrl" type="hidden" value="/account">
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<script type="text/javascript">
		function showRecoverPasswordForm() {
			document.getElementById('recover-password').style.display = 'block';
			document.getElementById('nd-login').style.display = 'none';
		}

		function hideRecoverPasswordForm() {
			document.getElementById('recover-password').style.display = 'none';
			document.getElementById('nd-login').style.display = 'block';
		}


	</script>
