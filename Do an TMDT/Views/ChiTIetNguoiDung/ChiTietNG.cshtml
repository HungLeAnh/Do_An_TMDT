@model Do_an_CCNPMM.Models.NguoiDung
@{
    ViewData["Title"] = "ChiTietNG";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/adminassets/css/app.min.css" rel="stylesheet">
<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>Customer Information</h1>
                <nav class="d-flex align-items-center">
                    <a asp-area="" asp-controller="Home" asp-action="Loadsanpham">Home<span class="lnr lnr-arrow-right"></span></a>
                    <a href="">Customer</a>
                </nav>
            </div>
        </div>
    </div>
</section>

<section class="NoidungChinh">
    <div class="Noidung1">
        <div class="title_hello">
            <h5 class="title_trangtaikhoan">User Page</h5>
            <p>
                Hello, 
                <span>@ViewBag.khachhang.TenNguoiDung </span>
            </p>
        </div>
        <ul class="noidung1_1">
            <li><a class="noidungInfo" asp-action="ChiTietNG">User infomation</a></li>
            <li><a class="noidungInfo_active" asp-action="DonHang">Your orders</a></li>
            <li><a class="noidungInfo" href="@Url.Action("EditMK", new { id =@ViewBag.khachhang.MaNguoiDung })">Change password</a></li>
            <li><a asp-controller="Home" asp-action="Loadsanpham">Log out</a></li>
        </ul>
    </div>
    <div class="Noidung2">
        <h2 class="title_Chinh">User infomation</h2>
        <p><strong>Fullname: </strong>@ViewBag.khachhang.TenNguoiDung</p>
        <p><strong>Phone: </strong>@ViewBag.khachhang.Sdt</p>
        <p><strong>Email: </strong> @ViewBag.khachhang.Email</p>

        <a class="genric-btn primary radius large" href="@Url.Action("Edit", new { id =@ViewBag.khachhang.MaNguoiDung })" role="button">Edit</a>
    </div>
</section>
<style>
    .NoidungChinh {
        position: relative;
        padding-left: 200px;
        display: flex;
        width: 100%;
        height: 500px;
    }

    .Noidung1 {
        text-align: left;
    }

    .title_hello {
        padding-top: 10px;
        padding-bottom: 20px;
    }

    .title_trangtaikhoan {
        padding-top: 10px;
        text-transform: uppercase;
        font-family: Arial, Helvetica, sans-serif;
        font-size: 24px;
    }

    .noidungInfo {
        font-family: Arial, Helvetica, sans-serif;
        padding-top: 0px;
        margin-bottom: 20px;
    }

    .noidung1_1 {
        list-style: none;
        display: list-item;
        margin-bottom: 20px;
    }

    .Noidung2 {
        list-style: none;
        padding-top: 30px;
        padding-left: 200px;
    }

    .title_Chinh {
        text-transform: uppercase;
        font-size: 19px;
        margin-bottom: 20px;
    }

    .noidung1_1 > li > a {
        margin-top: 20px;
        margin-bottom: 20px;
        list-style: none;
        text-decoration: none;
        display: block;
        color: #777777
    }

        .noidung1_1 > li > a:hover {
            color: #FF6D01;
            font-size: 15px;
        }

    

</style>
