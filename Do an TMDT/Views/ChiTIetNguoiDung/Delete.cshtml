@model Do_an_TMDT.ViewModels.HomeVM

@{
    ViewData["Title"] = "Delete";

}
<!-- page css -->
<link href="~/adminassets/vendors/bootstrap-datepicker/bootstrap-datepicker.min.css" rel="stylesheet" />

<!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">

<!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>

<!-- Core css -->
<link href="~/adminassets/css/app.min.css" rel="stylesheet">
<link href="~/css/4.css" rel="stylesheet" />
<link href="~/css/3.css" rel="stylesheet" />
<section class="bread-crumb">
    <div class="container">
        <div class="nd-main-title-breadcrumb text-center">Thông Tin Khách Hàng</div>
        <ul class="breadcrumb" itemscope="" itemtype="https://schema.org/BreadcrumbList">
            <li class="home" itemprop="itemListElement" itemscope="" itemtype="https://schema.org/ListItem">
                <a itemprop="item" asp-controller="NguoiDungs" asp-action="Loadsanpham" title="Trang chủ">
                    <span itemprop="name">Trang chủ</span>
                    <meta itemprop="position" content="1">
                </a>
            </li>

            <li itemprop="itemListElement" itemscope="" itemtype="https://schema.org/ListItem">
                <strong itemprop="name">Chi Tiết</strong>
                <meta itemprop="position" content="2">
            </li>

        </ul>
    </div>

</section>

<div class="container">
    <div class="row clajustify-content-sm-center">
        <div class="col-sm-4">
            <h1>Xóa Đơn Hàng</h1>
            <h3>Bạn có muốn xóa đơn hàng này không?</h3>
            <h4> Đơn hàng</h4>
        
            <hr />
            @{

                if (@ViewBag.mess != null)
                {
                    <div class="col">
                        <div class="alert alert-danger col-lg-2" role="alert">
                            @ViewBag.mess
                        </div>
                    </div>
                }
                }
        </div>
        <div class="container">
            <div class="row justify-content-sm-center">
                <div class="col-sm-8">
                    <div class="row m-10 ">
                        <div class="col-sm-6 border border-dark ">
                            Mã Đơn Hàng
                        </div>
                        <div class="col-sm-6 border border-dark ">
                            @ViewBag.xoa.MaDonHang
                        </div>

                    </div>

                    <div class="row m-10">
                        <div class="col-sm-6 border border-dark ">
                            Mã Người dùng
                        </div>

                        <div class="col-sm-6 border border-dark ">
                            @ViewBag.xoa.MaNguoiDung
                        </div>

                    </div>
                    <div class="row m-10">
                        <div class="col-sm-6 border border-dark ">
                            Địa chỉ
                        </div>

                        <div class="col-sm-6 border border-dark ">
                            @ViewBag.xoa.DiaChi
                        </div>

                    </div>
                    <div class="row m-10">
                        <div class="col-sm-6 border border-dark ">
                            Tình Trạng
                        </div>

                        <div class="col-sm-6 border border-dark ">
                            @ViewBag.xoa.TinhTrang
                        </div>

                    </div>
                    <div class="row m-10">
                        <div class="col-sm-6 border border-dark ">
                            Tổng Tiền
                        </div>

                        <div class="col-sm-6 border border-dark ">
                            @ViewBag.xoa.TongTien
                        </div>

                    </div>
                </div>
            </div>

            <form asp-action="Delete">
                <input type="submit" value="Delete" class="btn btn-danger" /> |

            </form>
        </div>
    </div>
</div>