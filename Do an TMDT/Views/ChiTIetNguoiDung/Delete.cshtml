@model Do_an_CCNPMM.ViewModels.HomeVM

@{
    ViewData["Title"] = "Delete";

}
<!-- Core css -->
<link href="~/adminassets/css/app.min.css" rel="stylesheet">
<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>Customer Information</h1>
                <nav class="d-flex align-items-center">
                    <a asp-area="" asp-controller="Home" asp-action="Loadsanpham">Home<span class="lnr lnr-arrow-right"></span></a>
                    <a href="">Customer</a>
                </nav>
            </div>
        </div>
    </div>
</section>

<div class="container" style="margin-bottom: 100px">
    <div class="row clajustify-content-sm-center">
        <div class="col-sm-8">
            <h1>Delete order</h1>
            <h3>Do you want to delete this order?</h3>
            <h4>Order</h4>
        
            <hr />
            @{

                if (@ViewBag.mess != null)
                {
                    <div class="col">
                        <div class="alert alert-danger col-lg-2" role="alert">
                            @ViewBag.mess
                        </div>
                    </div>
                }
                }
        </div>
        <div class="container">
            <div class="row justify-content-sm-center">
                <div class="col-sm-8">
                    <div class="row m-10 ">
                        <div class="col-sm-6 border border-dark ">
                            Order Id
                        </div>
                        <div class="col-sm-6 border border-dark ">
                            @ViewBag.xoa.MaDonHang
                        </div>

                    </div>

                    <div class="row m-10">
                        <div class="col-sm-6 border border-dark ">
                            User Id
                        </div>

                        <div class="col-sm-6 border border-dark ">
                            @ViewBag.xoa.MaNguoiDung
                        </div>

                    </div>
                    <div class="row m-10">
                        <div class="col-sm-6 border border-dark ">
                            Address
                        </div>

                        <div class="col-sm-6 border border-dark ">
                            @ViewBag.xoa.DiaChi
                        </div>

                    </div>
                    <div class="row m-10">
                        <div class="col-sm-6 border border-dark ">
                            Status
                        </div>

                        <div class="col-sm-6 border border-dark ">
                            @ViewBag.xoa.TinhTrang
                        </div>

                    </div>
                    <div class="row m-10">
                        <div class="col-sm-6 border border-dark ">
                            Total
                        </div>

                        <div class="col-sm-6 border border-dark ">
                            @ViewBag.xoa.TongTien
                        </div>

                    </div>
                </div>
            </div>

            <form asp-action="Delete">
                <input type="submit" value="Delete" class="genric-btn danger radius" />
            </form>
        </div>
    </div>
</div>